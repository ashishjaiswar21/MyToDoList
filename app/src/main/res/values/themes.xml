<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyToDoList" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/my_light_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Ensure that the action bar is enabled -->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <!-- status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.MyToDoList" parent="Base.Theme.MyToDoList" />
    <style name="ProgressBar">
        <item name="colorSecondary">@color/red_color</item>
    </style>

    // for bottem sheet delete dialog
    <style name="BottomSheetStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Modal</item>
    </style>
    <style name="Modal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/delete_sheet</item>
    </style>
</resources>
