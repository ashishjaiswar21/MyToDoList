<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/back_grey"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp">

        <View
            android:id="@+id/viewPriority"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/red_dot"
            android:layout_gravity="right"
            android:layout_margin="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:orientation="vertical">

        <TextView
            android:id="@+id/notesTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_bold"
            android:maxLines="1"
            android:text="Notes App"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/notesSubtitle"
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_regular"
            android:text="dnfjksndfjnsajdfnskjad vkdfjvadskjfvj djfnafsjvdfjsanf ckdsnfjdnskjnaskj dkfjsndsljfnsakjdfnskjdnfklsjdnfkjasndfkjsnadkjfaskdfjsdndfks"

            android:textColor="@color/white"
            android:textSize="14sp"/>

            <TextView
                android:id="@+id/notesDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_bold"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:text="01 June 2024"
                android:textSize="16sp"
                android:textColor="@color/white"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>